<?xml version="1.0" encoding="utf-8"?>
<!-- 系统消息提示（图片） -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_sm"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tv_title_sm"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_alignTop="@id/iv_sm"
	    android:layout_toRightOf="@id/iv_sm"
	    android:textColor="@color/black"
	    android:text="@string/app_name"
	    android:textSize="16sp"
	    />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tv_time_sm"
	    android:layout_below="@id/tv_title_sm"
	    android:layout_toRightOf="@id/iv_sm"
	    android:layout_alignLeft="@id/tv_title_sm"
	    android:textColor="@color/lessgray"
	    android:text="@string/app_name"
	    android:layout_marginTop="15dp"
	    android:textSize="14sp"
	    />
	<Button
	    android:layout_width="60dp"
	    android:layout_height="30dp"
	    android:id="@+id/btn_agree_sm"
	    android:background="@drawable/nextbtnclick"
	    android:layout_alignParentRight="true"
	    android:layout_alignBottom="@id/tv_time_sm"
	    android:layout_marginRight="10dp"
	    android:text="@string/agree"
	    android:textSize="14sp"
	    android:textColor="@color/white"
	    />
</RelativeLayout>
