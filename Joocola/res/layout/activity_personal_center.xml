<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/photoImg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/myphoto" />

                <ImageView
                    android:id="@+id/redPoint"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right|top"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/redpoint"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/framelayout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/personalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnclick"
                    android:gravity="center"
                    android:text="@string/edit"
                    android:textColor="@color/deepgray"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" 
            android:layout_marginTop="20dp"
            android:background="@color/gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/addLayout"
                android:layout_width="match_parent"
                android:background="@drawable/item_click"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/IAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/iAdd"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/addPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" 
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/redpoint"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/AddCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/lessgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />

            <LinearLayout
                android:id="@+id/applayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click" 
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/IApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/iApplay"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/applyPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ellipse"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/applyCount"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/applyCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/lessgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />

            <LinearLayout
                android:id="@+id/answerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click" 
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/IAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/iAnswer"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/answerPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ellipse"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/answerCount"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/answerCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/lessgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lessgray3" />

            <LinearLayout
                android:id="@+id/saveLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/item_click"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ISave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/iSave"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/saveCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/lessgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />

            <LinearLayout
                android:id="@+id/waitapplyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/item_click"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ICommit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/iCommit"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/commitPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ellipse"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/commitPointInit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />
            <LinearLayout
                android:id="@+id/feedbackLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/item_click"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/feedback_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/feedback"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/SettingsPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/redpoint"
                    android:visibility="gone" />
            </LinearLayout>
           <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />
           <LinearLayout
                android:id="@+id/exitloginLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/item_click"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/exitlogin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/logout_exit"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />
 
            </LinearLayout>
           <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />
            <LinearLayout
                android:id="@+id/settingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/item_click"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/settings"
                    android:textColor="@color/deepgray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/SettingsPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/redpoint"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" 
                android:background="@color/lessgray3" />
             
        </LinearLayout>
    </LinearLayout>

</ScrollView>