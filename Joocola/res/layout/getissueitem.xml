<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="15"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/issueitem_title"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:text="title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/issueitem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image_description"
            android:src="@drawable/photobg" />

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/issueitem_img"
            android:weightSum="3"
            android:orientation="vertical" >
         <TextView
            android:id="@+id/issueitem_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp" 
            android:text="姓名" />

             <LinearLayout
                 android:layout_width="match_parent" 
                 android:layout_marginTop="5dp"
                 android:layout_height="0dp" 
                 android:layout_weight="1"
                 android:orientation="horizontal" >
          <ImageView
              android:id="@+id/issueitem_seximg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:contentDescription="@string/image_description"
              android:src="@drawable/girl" />
           <TextView
              android:id="@+id/issueitem_age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:text="10" />
           <TextView
            android:id="@+id/issueitem_astro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5dp"
            android:text="天蝎" />
              </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1" >
           <TextView
             android:id="@+id/issueitem_issuesex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="25dp" 
             android:paddingLeft="8dp"
             android:paddingRight="8dp"
             android:paddingTop="3dp"
             android:paddingBottom="3dp"
             android:background="@color/gray2"
             android:text="男性" />
           <TextView
             android:id="@+id/issueitem_issuecost"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" 
             android:layout_marginLeft="20dp"
             android:paddingLeft="8dp"
             android:paddingRight="8dp"
             android:paddingTop="3dp"
             android:paddingBottom="3dp"
             android:background="@color/gray2"
             android:text="请我吧" />
             </LinearLayout>

        </LinearLayout>
         
    </RelativeLayout>

    <TextView
        android:id="@+id/issueitem_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="time"
        android:textSize="16sp" />
    <RelativeLayout 
     android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
        android:id="@+id/issueitem_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_alignParentTop="true"
        android:text="地址" />

        <ImageView
            android:id="@+id/issueitem_locationbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="28dp"
            android:padding="5dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/didian" />
        
    </RelativeLayout>
     

    <TextView
        android:id="@+id/issueitem_description"
       android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="说明" />
    <View
            android:layout_width="wrap_content"
            android:layout_height="1px"  
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:layout_height="0dp" >

        <TextView
            android:id="@+id/issueitem_state"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:text="状态" />

        <TextView
            android:id="@+id/issueitem_usercount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:text="报名" />

        <ImageView
            android:id="@+id/fenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/actionbar_fenge" />

        <TextView
            android:id="@+id/issueitem_replycount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:text="回复" />

    </LinearLayout>

</LinearLayout>
