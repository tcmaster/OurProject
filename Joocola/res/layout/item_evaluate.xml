<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white" >
     
   <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/evaluate_img"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp" 
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/photobg" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:weightSum="3"
       android:orientation="vertical" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/evaluate_name"
               android:layout_width="0dp"
               android:layout_weight="2" 
               android:layout_marginLeft="15dp "
               android:layout_gravity="center_vertical"
               android:layout_height="wrap_content"
               android:text="名字" />
            <TextView
               android:id="@+id/evaluate_zt"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="50dp"
               android:layout_height="wrap_content"
               android:text="状态" />
    </LinearLayout>
       <LinearLayout
                 android:layout_width="match_parent"  
                 android:layout_height="0dp" 
                 android:layout_weight="1" 
                 android:orientation="horizontal" >
          <ImageView
              android:id="@+id/evaluate__seximg"
              android:layout_width="16dp"
              android:layout_height="16dp" 
              android:layout_marginLeft="10dp"
              android:layout_gravity="center_vertical"
              android:contentDescription="@string/image_description"
              android:src="@drawable/boy" />
           <TextView
              android:id="@+id/evaluate__age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:layout_marginLeft="10dp"
              android:layout_gravity="center_vertical"
              android:text="10" />
           <TextView
            android:id="@+id/evaluate__astro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="天蝎" />
           <Button
            android:id="@+id/evaluate__pj"
            android:layout_width="60dp"
            android:layout_height="20dp" 
            android:layout_marginLeft="50dp" 
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/nextbtnclick" 
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="查看评价" />
              </LinearLayout>

       <TextView
           android:id="@+id/evaluate__signature"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:layout_marginLeft="15dp" 
           android:gravity="center_vertical"
           android:text="signature" />

   </LinearLayout>

</LinearLayout>